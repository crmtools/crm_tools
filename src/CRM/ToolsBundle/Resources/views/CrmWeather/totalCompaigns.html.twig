{% extends "CRMToolsBundle::layout.html.twig" %}

{% block title %}
    Total Campaigns - {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container containerPage">
        <h1 class="titlePage">Total Campaigns</h1>
        <div class="paraphDescript">
            <p>Display the volume of leads collected linked to each marketing campaign. Based on CLI_Event UCR table. Allow the marketing business
                team to exchange with the leads as privileged customers.</p>
        </div>
        <div class="cssFromTable containerPage">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr class = "greenBackground">
                            <th>{{ queryName }}</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="blueHoverLine">
                        <tr>
                            <th> CAMPAIGN </th>
                            <th> TOTAL </th>
                        </tr>
                        {% for compaign in queryResult %}
                            <tr>
                                <td>{{ compaign['CAMPAIGN'] }}</td>
                                <td>{{ compaign['TOTAL'] }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}